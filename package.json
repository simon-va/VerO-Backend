{
  "name": "vero-backend",
  "version": "1.0.0",
  "description": "A REST API for a club management software.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "dev": "ts-node-dev --watch .src/index.ts ./src",
    "format": "prettier --write 'src/**/*.ts'",
    "prepare": "husky install",
    "init-mocks": "ts-node src/db/mocks/init.ts"
  },
  "lint-staged": {
    "*.{ts}": [
      "organize-imports-cli",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon-va/vero-backend.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "sequelize",
    "typescript"
  ],
  "author": "Simon Vahlbrock",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/simon-va/vero-backend/issues"
  },
  "homepage": "https://github.com/simon-va/vero-backend#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "fastest-validator": "^1.17.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.2",
    "sequelize": "^6.37.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.25",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^3.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  }
}
